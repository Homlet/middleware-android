<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Improve the default AppCompat Spinner style -->
        <item name="android:spinnerItemStyle">@style/SpinnerText</item>
    </style>

    <style name="SpinnerText" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?android:textColorHint</item>
    </style>

    <style name="BottomNavigation" parent="AppTheme">
        <item name="itemIconTint">@drawable/selector_nav</item>
        <item name="itemTextColor">@drawable/selector_nav</item>
        <item name="itemBackground">@color/colorPrimaryDark</item>
    </style>
</resources>
